@page
@model WebApplication1.Pages.Students.IndexModel

@{
    ViewData["Title"] = "Students";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Students</h1>

<div class="d-flex justify-content-between align-items-center mb-2">
    <a asp-page="Create" class="btn btn-primary">Create New</a>
    <form method="get" class="d-flex align-items-center gap-2 mb-0">
        <label for="pageSize" class="mb-0">Records per page:</label>
        <select id="pageSize" name="pageSize" onchange="this.form.submit()" class="form-select d-inline w-auto">
            @foreach (var size in new[] { 10, 20, 50, 100 })
            {
                <option value="@size" selected="@(size == Model.PageSize ? "selected" : null)">@size</option>
            }
        </select>
    </form>
</div>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Search students..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Profile</th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@(Model.SortOrder == "FirstName" ? "FirstName_Desc" : "FirstName")"
                   asp-route-search="@Model.Search"
                   asp-route-pageSize="@Model.PageSize">
                    @Html.DisplayNameFor(model => model.Student[0].FirstName)
                    @if (Model.SortOrder == "FirstName")
                    {
                        <span>▲</span>
                    }
                    else if (Model.SortOrder == "FirstName_Desc")
                    {
                        <span>▼</span>
                    }
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@(Model.SortOrder == "LastName" ? "LastName_Desc" : "LastName")"
                   asp-route-search="@Model.Search"
                   asp-route-pageSize="@Model.PageSize">
                    @Html.DisplayNameFor(model => model.Student[0].LastName)
                    @if (Model.SortOrder == "LastName")
                    {
                        <span>▲</span>
                    }
                    else if (Model.SortOrder == "LastName_Desc")
                    {
                        <span>▼</span>
                    }
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@(Model.SortOrder == "DateOfBirth" ? "DateOfBirth_Desc" : "DateOfBirth")"
                   asp-route-search="@Model.Search"
                   asp-route-pageSize="@Model.PageSize">
                    @Html.DisplayNameFor(model => model.Student[0].DateOfBirth)
                    @if (Model.SortOrder == "DateOfBirth")
                    {
                        <span>▲</span>
                    }
                    else if (Model.SortOrder == "DateOfBirth_Desc")
                    {
                        <span>▼</span>
                    }
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@(Model.SortOrder == "Email" ? "Email_Desc" : "Email")"
                   asp-route-search="@Model.Search"
                   asp-route-pageSize="@Model.PageSize">
                    @Html.DisplayNameFor(model => model.Student[0].Email)
                    @if (Model.SortOrder == "Email")
                    {
                        <span>▲</span>
                    }
                    else if (Model.SortOrder == "Email_Desc")
                    {
                        <span>▼</span>
                    }
                </a>
            </th>
            <th></th>
            <th>Enroll</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Student) {
        <tr>
            <td>
                @if (item.ProfilePicture != null && item.ProfilePictureContentType != null)
                {
                    var base64 = Convert.ToBase64String(item.ProfilePicture);
                    <img src="data:@item.ProfilePictureContentType;base64,@base64" alt="Profile Picture" style="max-width:50px;max-height:50px;border-radius:50%;" />
                }
            </td>
            <td>@Html.DisplayFor(modelItem => item.FirstName)</td>
            <td>@Html.DisplayFor(modelItem => item.LastName)</td>
            <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
            <td>
                <a asp-page="/Students/Enroll/Enroll" asp-route-id="@item.Id">Enroll</a>
            </td>
        </tr>
}
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link"
                   asp-page="./Index"
                   asp-route-pageNumber="@i"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-sortOrder="@Model.SortOrder"
                   asp-route-search="@Model.Search">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>
