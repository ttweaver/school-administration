@page "/student/{id}/enroll"
@model WebApplication1.Pages.Enroll.EnrollModel

@{
    ViewData["Title"] = "Enroll in a Class";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Enroll in a Class</h1>

@if (Model.Enrollment.StudentId != 0)
{
    <h4>Available Courses</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Course Name</th>
                <th>Description</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var course in Model.Course)
        {
            var alreadyEnrolled = Model.EnrolledCourseIds.Contains(course.Id);
            var canUnenroll = alreadyEnrolled && (course.StartDate == null || course.StartDate > DateTime.Today);
            <tr>
                <td>@course.Name</td>
                <td>@course.Description</td>
                <td>@course.StartDate?.ToShortDateString()</td>
                <td>@course.EndDate?.ToShortDateString()</td>
                <td>
                    @if (alreadyEnrolled)
                    {
                        if (canUnenroll)
                        {
                            <form method="post" asp-page-handler="Unenroll" style="display:inline;">
                                <input type="hidden" name="Enrollment.CourseId" value="@course.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Unenroll</button>
                            </form>
                        }
                        else
                        {
                            <span class="text-success">Already Enrolled</span>
                        }
                    }
                    else
                    {
                        <form method="post" style="display:inline;">
                            <input type="hidden" name="Enrollment.CourseId" value="@course.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Enroll</button>
                        </form>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}