@page
@model WebApplication1.Pages.Students.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.Id" />
            <div class="form-group">
                <label asp-for="Student.FirstName" class="control-label"></label>
                <input asp-for="Student.FirstName" class="form-control" />
                <span asp-validation-for="Student.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.LastName" class="control-label"></label>
                <input asp-for="Student.LastName" class="form-control" />
                <span asp-validation-for="Student.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.DateOfBirth" class="control-label"></label>
                <input asp-for="Student.DateOfBirth" class="form-control" />
                <span asp-validation-for="Student.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Email" class="control-label"></label>
                <input asp-for="Student.Email" class="form-control" />
                <span asp-validation-for="Student.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.StreetAddress" class="control-label"></label>
                <input asp-for="Student.StreetAddress" class="form-control" />
                <span asp-validation-for="Student.StreetAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.City" class="control-label"></label>
                <input asp-for="Student.City" class="form-control" />
                <span asp-validation-for="Student.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.State" class="control-label"></label>
                <input asp-for="Student.State" class="form-control" />
                <span asp-validation-for="Student.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.PostalCode" class="control-label"></label>
                <input asp-for="Student.PostalCode" class="form-control" />
                <span asp-validation-for="Student.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Country" class="control-label"></label>
                <input asp-for="Student.Country" class="form-control" />
                <span asp-validation-for="Student.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.MobilePhone" class="control-label"></label>
                <input asp-for="Student.MobilePhone" class="form-control" />
                <span asp-validation-for="Student.MobilePhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.HomePhone" class="control-label"></label>
                <input asp-for="Student.HomePhone" class="form-control" />
                <span asp-validation-for="Student.HomePhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.EmergencyContactName" class="control-label"></label>
                <input asp-for="Student.EmergencyContactName" class="form-control" />
                <span asp-validation-for="Student.EmergencyContactName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.EmergencyContactPhone" class="control-label"></label>
                <input asp-for="Student.EmergencyContactPhone" class="form-control" />
                <span asp-validation-for="Student.EmergencyContactPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="ProfilePicture">Profile Picture</label>
                <input type="file" name="ProfilePicture" class="form-control" accept="image/*" />
                @if (Model.Student.ProfilePicture != null && Model.Student.ProfilePictureContentType != null)
                {
                    var base64 = Convert.ToBase64String(Model.Student.ProfilePicture);
                    <div class="mt-2">
                        <img src="data:@Model.Student.ProfilePictureContentType;base64,@base64" alt="Profile Picture" style="max-width:150px;max-height:150px;" />
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
