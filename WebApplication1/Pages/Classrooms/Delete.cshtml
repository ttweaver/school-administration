@page
@model WebApplication1.Pages.Classrooms.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Classroom</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classroom.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classroom.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classroom.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classroom.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classroom.StartDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classroom.StartDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classroom.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classroom.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Classroom.Teacher)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Classroom.Teacher != null)
            {
                @Html.DisplayFor(model => model.Classroom.Teacher!.Id)
            }
            else
            {
                <span class="text-muted">No Teacher Assigned</span>
            }
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Classroom.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
