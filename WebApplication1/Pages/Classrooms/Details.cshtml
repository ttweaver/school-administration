@page
@model WebApplication1.Pages.Classrooms.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Classroom</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @if (Model.Classroom != null)
            {
                @Html.DisplayNameFor(model => model.Classroom.Name)
            }
            else
            {
                <span>Name</span>
            }
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classroom.Name)
        </dd>
        <dt class="col-sm-2">
            @if (Model.Classroom != null)
            {
                @Html.DisplayNameFor(model => model.Classroom.Description)
            }
            else
            {
                <span>Description</span>
            }
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classroom.Description)
        </dd>
        <dt class="col-sm-2">
            @if (Model.Classroom != null)
            {
                @Html.DisplayNameFor(model => model.Classroom.StartDate)
            }
            else
            {
                <span>Start Date</span>
            }
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classroom.StartDate)
        </dd>
        <dt class="col-sm-2">
            @if (Model.Classroom != null)
            {
                @Html.DisplayNameFor(model => model.Classroom.EndDate)
            }
            else
            {
                <span>End Date</span>
            }
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Classroom.EndDate)
        </dd>
        <dt class="col-sm-2">
            @if (Model.Classroom != null)
            {
                @Html.DisplayNameFor(model => model.Classroom.Teacher)
            }
            else
            {
                <span>Teacher</span>
            }
        </dt>
        <dd class="col-sm-10">
            @if (Model.Classroom?.Teacher != null)
            {
                @(Model.Classroom.Teacher.FirstName + " " + Model.Classroom.Teacher.LastName)
            }
            else
            {
                <span>(No teacher)</span>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Classroom?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
