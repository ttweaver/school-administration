@page
@model WebApplication1.Pages.Courses.IndexModel

@{
    ViewData["Title"] = "Courses";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Courses</h1>

<div class="d-flex justify-content-between align-items-center mb-2">
    <a asp-page="Create" class="btn btn-primary">Create New</a>
    <form method="get" class="d-flex align-items-center gap-2 mb-0">
        <label for="pageSize" class="mb-0">Records per page:</label>
        <select id="pageSize" name="pageSize" onchange="this.form.submit()" class="form-select d-inline w-auto">
            @foreach (var size in new[] { 10, 20, 50, 100 })
            {
                <option value="@size" selected="@(size == Model.PageSize ? "selected" : null)">@size</option>
            }
        </select>
    </form>
</div>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" value="@Model.Search" class="form-control" placeholder="Search courses..." />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@(Model.SortOrder == "Name" ? "Name_Desc" : "Name")"
                   asp-route-search="@Model.Search"
                   asp-route-pageSize="@Model.PageSize">
                    @Html.DisplayNameFor(model => model.Course[0].Name)
                    @if (Model.SortOrder == "Name")
                    {
                        <span>▲</span>
                    }
                    else if (Model.SortOrder == "Name_Desc")
                    {
                        <span>▼</span>
                    }
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@(Model.SortOrder == "Description" ? "Description_Desc" : "Description")"
                   asp-route-search="@Model.Search"
                   asp-route-pageSize="@Model.PageSize">
                    @Html.DisplayNameFor(model => model.Course[0].Description)
                    @if (Model.SortOrder == "Description")
                    {
                        <span>▲</span>
                    }
                    else if (Model.SortOrder == "Description_Desc")
                    {
                        <span>▼</span>
                    }
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@(Model.SortOrder == "StartDate" ? "StartDate_Desc" : "StartDate")"
                   asp-route-search="@Model.Search"
                   asp-route-pageSize="@Model.PageSize">
                    @Html.DisplayNameFor(model => model.Course[0].StartDate)
                    @if (Model.SortOrder == "StartDate")
                    {
                        <span>▲</span>
                    }
                    else if (Model.SortOrder == "StartDate_Desc")
                    {
                        <span>▼</span>
                    }
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@(Model.SortOrder == "EndDate" ? "EndDate_Desc" : "EndDate")"
                   asp-route-search="@Model.Search"
                   asp-route-pageSize="@Model.PageSize">
                    @Html.DisplayNameFor(model => model.Course[0].EndDate)
                    @if (Model.SortOrder == "EndDate")
                    {
                        <span>▲</span>
                    }
                    else if (Model.SortOrder == "EndDate_Desc")
                    {
                        <span>▼</span>
                    }
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@(Model.SortOrder == "Quarter" ? "Quarter_Desc" : "Quarter")"
                   asp-route-search="@Model.Search"
                   asp-route-pageSize="@Model.PageSize">
                    @Html.DisplayNameFor(model => model.Course[0].Quarter)
                    @if (Model.SortOrder == "Quarter")
                    {
                        <span>▲</span>
                    }
                    else if (Model.SortOrder == "Quarter_Desc")
                    {
                        <span>▼</span>
                    }
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@(Model.SortOrder == "Year" ? "Year_Desc" : "Year")"
                   asp-route-search="@Model.Search"
                   asp-route-pageSize="@Model.PageSize">
                    @Html.DisplayNameFor(model => model.Course[0].Year)
                    @if (Model.SortOrder == "Year")
                    {
                        <span>▲</span>
                    }
                    else if (Model.SortOrder == "Year_Desc")
                    {
                        <span>▼</span>
                    }
                </a>
            </th>
            <th>
                <a asp-page="./Index"
                   asp-route-sortOrder="@(Model.SortOrder == "Teacher" ? "Teacher_Desc" : "Teacher")"
                   asp-route-search="@Model.Search"
                   asp-route-pageSize="@Model.PageSize">
                    Teacher
                    @if (Model.SortOrder == "Teacher")
                    {
                        <span>▲</span>
                    }
                    else if (Model.SortOrder == "Teacher_Desc")
                    {
                        <span>▼</span>
                    }
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Course) {
        <tr>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.StartDate?.ToShortDateString()</td>
            <td>@item.EndDate?.ToShortDateString()</td>
            <td>@item.Quarter</td>
            <td>@item.Year</td>
            <td>@item.Teacher?.LastName</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a> |
                <a asp-page="/Courses/Assignments/Index" asp-route-courseId="@item.Id">Assignments</a>
            </td>
        </tr>
}
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                <a class="page-link"
                   asp-page="./Index"
                   asp-route-pageNumber="@i"
                   asp-route-pageSize="@Model.PageSize"
                   asp-route-sortOrder="@Model.SortOrder"
                   asp-route-search="@Model.Search">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>