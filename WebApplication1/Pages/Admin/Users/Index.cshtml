@page
@model WebApplication1.Pages.Admin.Users.IndexModel
@{
    ViewData["Title"] = "User Management";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>User Management</h1>

<table class="table">
    <thead>
        <tr>
            <th>User Name</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Add to Role</th>
            <th>Remove from Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>@string.Join(", ", user.Roles)</td>
            <td>
                <form method="post" asp-page-handler="AddToRole" class="d-flex gap-1">
                    <input type="hidden" name="UserId" value="@user.Id" />
                    <select name="RoleName" class="form-select form-select-sm w-auto">
                        <option value="">Select role</option>
                        @foreach (var role in Model.Roles)
                        {
                            if (!user.Roles.Contains(role.Name))
                            {
                                <option value="@role.Name">@role.Name</option>
                            }
                        }
                    </select>
                    <button type="submit" class="btn btn-sm btn-primary">Add</button>
                </form>
            </td>
            <td>
                @foreach (var role in user.Roles)
                {
                    <form method="post" asp-page-handler="RemoveFromRole" class="d-inline">
                        <input type="hidden" name="UserId" value="@user.Id" />
                        <input type="hidden" name="RoleName" value="@role" />
                        <button type="submit" class="btn btn-link text-danger p-0" title="Remove @role" onclick="return confirm('Remove @user.UserName from @role?');">
                            @role <span aria-hidden="true">&times;</span>
                        </button>
                    </form>
                }
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@user.Id">Edit</a>
                <form method="post" asp-page-handler="DeleteUser" asp-route-id="@user.Id" class="d-inline" onsubmit="return confirm('Are you sure you want to delete @user.UserName?');">
                    <button type="submit" class="btn btn-link text-danger p-0 ms-2">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<h2>Create New Role</h2>
<form method="post" asp-page-handler="CreateRole" class="mb-3">
    <div class="input-group w-auto">
        <input type="text" name="RoleName" class="form-control" placeholder="Role name" required />
        <button type="submit" class="btn btn-primary">Add Role</button>
    </div>
    @if (!string.IsNullOrEmpty(Model.RoleMessage))
    {
        <div class="text-danger mt-2">@Model.RoleMessage</div>
    }
</form>

<h2>Roles</h2>
<table class="table">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var role in Model.Roles)
    {
        <tr>
            <td>@role.Name</td>
            <td>
                <a asp-page="./EditRole" asp-route-id="@role.Id">Edit</a>
                <form method="post" asp-page-handler="DeleteRole" asp-route-id="@role.Id" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this role?');">
                    <button type="submit" class="btn btn-link text-danger p-0 ms-2">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>