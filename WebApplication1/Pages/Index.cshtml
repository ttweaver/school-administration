@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to the School Administration Website</h1>

    <div class="alert alert-info mt-4" role="alert">
        <strong>To get started:</strong>
        <ul class="list-unstyled mb-0">
            <li>• If you already have an account, please <a asp-area="Identity" asp-page="/Account/Login">log in</a>.</li>
            <li>• If you are new, please <a asp-area="Identity" asp-page="/Account/Register">register</a> for an account.</li>
        </ul>
        <small>You must be logged in to access most features of this site.</small>
    </div>
</div>