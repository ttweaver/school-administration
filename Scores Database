CREATE TABLE dbo.ScoreEntries(
  Id INT IDENTITY PRIMARY KEY,
  StudentId INT NOT NULL,
  CourseId  INT NOT NULL,
  Type      INT NOT NULL,          -- 0=Assignment, 1=Quiz, 2=Exam, 3=Project
  Title     NVARCHAR(100) NOT NULL,
  DateAssigned DATE NOT NULL,
  PointsPossible DECIMAL(8,2) NOT NULL CHECK (PointsPossible > 0),
  PointsEarned   DECIMAL(8,2) NOT NULL CHECK (PointsEarned >= 0),
  Comments NVARCHAR(400) NULL
);
-- (optional) avoid dup entries for same item on same day:
-- CREATE UNIQUE INDEX UX_ScoreEntries ON dbo.ScoreEntries(StudentId, CourseId, Title, DateAssigned);
